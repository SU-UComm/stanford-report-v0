{
  "$schema": "http://localhost:3000/schemas/v1.json",
  "name": "pullquote",
  "namespace": "stanford-components",
  "displayName": "Pullquote",
  "description": "Pullquote component",
  "version": "0.0.1",
  "mainFunction": "main",
  "environment": [],
  "functions": [
    {
      "name": "main",
      "entry": "main.js",
      "input": {
        "type": "object",
        "title": "Pullquote",
        "description": "",
        "required": [],
        "properties": {
          "content": {
            "type": "string",
            "title": "Quote text",
            "default": ""
          },
          "attribution": {
            "type": "string",
            "title": "Attribution",
            "default": ""
          },
          "description": {
            "type": "string",
            "title": "Description",
            "default": ""
          },
          "image": {
            "type": "string",
            "title": "Image URL",
            "default": ""
          },
          "alignment": {
            "type": "string",
            "title": "Alignment",
            "enum": ["left", "center", "right"]
          },
          "bgColor": {
            "type": "string",
            "title": "Background Color",
            "default": ""
          },
          "width": {
            "type": "string",
            "title": "Width",
            "enum": ["content", "wide", "full"]
          }
        }
      },
      "output": {
        "responseType": "html",
        "staticFiles": []
      }
    }
  ],
  "previews": {
    "default": {
      "functionData": {
        "main": {
          "inputData": {
            "type": "file",
            "path": "data/sample.json"
          },
          "wrapper": {
            "path": "previews/wrapper.html"
          }
        }
      }
    }
  },
  "staticFiles": {
    "locationRoot": "static"
  }
}
